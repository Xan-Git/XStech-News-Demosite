@using Humanizer
@{
    Layout = "_MainLayout";
}
@model Post


<div class="main-content">
    <div class="post-wrapper">
        <header class="post-header">
            <p>@Model.Category</p>
            <h1>@Model.Title</h1>
            <div class="post-meta">
                <span>@Model.UploadDate.ToShortDateString()</span>
                <span>/</span>
                <span>By @Model.Author.FirstName @Model.Author.LastName</span>
                <span>/</span>
                <span><i class="fa-solid fa-eye"></i>&nbsp; @Model.Views.ToMetric(decimals: 1)</span>
            </div>
            <div class="post-social">
                <a href="https://www.facebook.com" class="fb-btn"><i class="fa-brands fa-facebook-f"></i>&nbsp; Share On Facebook</a>
                <a href="https://www.twitter.com" class="tw-btn"><i class="fa-brands fa-twitter"></i>&nbsp; Share On Twitter</a>
            </div>
        </header>

        <img class="post-header-img" src="@Model.ImageURL" alt="Post Thumbnail" asp-append-version="true" />
        
        <partial name="~/@Model.PartialURL" />

        <div class="post-advert">
            <img class="adobe-ad" src="~/images/Advert_Adobe.png" alt="Advertisement" asp-append-version="true" />
        </div>

        <partial name="_AboutAuthor" model="@Model.Author" />

        @await Component.InvokeAsync("PrevNext", @Model)
        
    </div>
    @await Component.InvokeAsync("Sidebar");
</div>